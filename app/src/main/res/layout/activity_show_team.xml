<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03382c"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView11"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airstrikelaser"

        android:gravity="center_vertical"
        android:text="YOUR TEAM:  "
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner

        android:id="@+id/showteamspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/createnewteambutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/airstrikelaser"
        android:text="Create new team"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/updateteambutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/airstrikelaser"
        android:text="Update"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/myText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Players:"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/background_light"
        android:fontFamily="@font/dopestyle"
        android:textSize="35sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>